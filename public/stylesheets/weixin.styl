html, body
  margin 0
  padding 0

body
  background #f3f1da

a
  color blue
  text-decoration none

.msg-wrapper
  max-width 480px
  margin 0 auto 30px
  font-family Arial,Lobster,Heiti
  .msg-container
    margin 15px 15px 25px
    box-shadow 0px 3px 12px 0px #747474
    border-radius 10px
  a.msg-item
    &:hover
      background #efefef
  .msg-item
    width 100%
    display table
    table-layout fixed
    overflow auto
    background #FFF
    color #000
    text-decoration none
    border-bottom 1px solid #e7e5e5
    font-size 0
    -webkit-touch-callout none
    -webkit-user-select none
    -khtml-user-select none
    -moz-user-select none
    -ms-user-select none
    user-select none
    -webkit-tap-highlight-color rgba(0, 0, 0, 0)
    &:first-child
      border-top-left-radius 10px
      border-top-right-radius 10px
    &:last-child
      border-bottom 0
      border-bottom-left-radius 10px
      border-bottom-right-radius 10px
    &:hover
      color #000
      text-decoration none
    &.blue_link
      color blue
      &:hover
        color blue
    .msg-text
      display table-cell
      font-size 16px
      line-height 24px
      vertical-align middle
      padding 12px 0 12px 12px
    .msg-img
      display table-cell
      vertical-align middle
      width 100px
      height 100px
      text-align center
      img
        width 80px
        height 80px
    .msg-big-img
      display table-cell
      vertical-align middle
      padding 10px
      position relative
      img
        width 100%
      .msg-big-img-text
        display block
        position absolute
        bottom 10px
        left 10px
        right 10px
        overflow hidden
        text-overflow ellipsis
        white-space nowrap
        background #000
        color #fff
        opacity 0.6
        font-size 16px
        padding 5px
        text-align center
    .msg-text-only
      display table-cell
      font-size 16px
      line-height 20px
      padding 8px 12px 8px 12px

.footer
  text-align center
  font-size 13px
  color #666
  a
    color blue
    text-decoration none
